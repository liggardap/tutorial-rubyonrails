<div class="mx-auto w-full h-full">
    <h2 class="text-4xl font-extrabold dark:text-white mb-5"><%= @article.title %></h2>
    <p class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400"><%= @article.body %></p>
    
    <button type="button" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900"><%= link_to "Edit", edit_article_path(@article) %></button>
    <button type="button" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>

</div>

